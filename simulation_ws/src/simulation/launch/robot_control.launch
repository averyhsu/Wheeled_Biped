<launch>
  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find simulation)/config/robot.yaml" command="load" />

  <!-- load the controllers -->
  <node name="controller_spawner"
        pkg="controller_manager" type="spawner" respawn="false"
        output="screen" ns="/wheeled_biped"
        args="joint_state_controller
              left_hip_position_controller
              right_hip_position_controller
              left_knee_position_controller
              right_knee_position_controller
              left_wheel_effort_controller
              right_wheel_effort_controller" />

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
    respawn="false" output="screen">
    <remap from="/joint_states" to="/wheeled_biped/joint_states" />
  </node>

</launch>